rule cosigt:
    input:
        expand(config['output'] + '/cosigt/{sample}/{region}/cosigt_genotype.tsv', sample=df['sample_id'].tolist(), region=config['region']),
        expand(config['output'] + '/bwa-mem2/{sample}/{region}.realigned.bam.all.pdf', sample=df['sample_id'].tolist(), region=config['region'])

