include: 'rules/gafpack.smk'
include: 'rules/cosigt.smk'

rule cosigt:
	input:
		expand('results/cosigt/{sample}/{region}/best_genotype.tsv', sample=df['sample_id'].tolist(), region=config['region']),

rule evaluation:
