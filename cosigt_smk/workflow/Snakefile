import pandas as pd
from glob import glob

configfile: 'config/config.yaml'

df=(pd.read_table(config['samples'], dtype={'sample_id': str, 'cram':str})
    .set_index('sample_id', drop=False)
    .sort_index()
)

include: 'rules/wfmash.smk'
